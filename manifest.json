{
    "manifest_version": 2,
    "name": "Tab Control",
    "version": "2.1",
    "description": "Limit the number of tabs you can have open.",
    "icons": {
        "48": "icons/icon48.png",
        "96": "icons/icon96.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "background": {
        "scripts": [
            "src/browser-polyfill.js",
            "src/background.js"
        ]
    },
    "options_ui": {
        "page": "src/options.html"
    },
    "browser_action": {
        "default_icon": "icons/icon128.png"
    }
}
